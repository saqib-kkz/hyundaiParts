# Production Environment Variables for Railway
NODE_ENV=production
PORT=3000

# Base URL - Update this with your Railway domain
BASE_URL=https://your-app-name.railway.app

# Stripe Production Keys (Get these from your Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Payment Gateway Configuration (Legacy - can be removed if not needed)
PAYMENT_API_KEY=your_production_payment_api_key
PAYMENT_API_SECRET=your_production_payment_api_secret
PAYMENT_BASE_URL=https://your-production-payment-gateway.com
PAYMENT_WEBHOOK_SECRET=your_production_webhook_secret

# WhatsApp Configuration
WHATSAPP_API_KEY=your_production_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=+966500000000

# Authentication (Use strong, unique secrets in production)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_very_long_and_secure_session_secret_here_minimum_32_characters

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Database (if using external database)
# DATABASE_URL=your_production_database_url_here 