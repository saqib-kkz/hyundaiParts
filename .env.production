# Production Environment Variables
# Copy this file and set your actual production values

# Database Configuration
BIGQUERY_PROJECT_ID=your-gcp-project-id
BIGQUERY_DATASET_ID=spare_parts
BIGQUERY_TABLE_ID=requests
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Payment Gateway - Ottu (Primary)
# Production Ottu Configuration
OTTU_API_KEY=your_ottu_production_api_key
OTTU_MERCHANT_ID=your_ottu_merchant_id
OTTU_WEBHOOK_SECRET=your_ottu_webhook_secret

# Sandbox Ottu Configuration (for testing)
OTTU_SANDBOX_API_KEY=your_ottu_sandbox_api_key
OTTU_SANDBOX_MERCHANT_ID=your_ottu_sandbox_merchant_id
OTTU_SANDBOX_WEBHOOK_SECRET=your_ottu_sandbox_webhook_secret

# Alternative Payment Gateways (Optional)
# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# HyperPay
HYPERPAY_ENTITY_ID=your_hyperpay_entity_id
HYPERPAY_ACCESS_TOKEN=your_hyperpay_access_token
HYPERPAY_TEST_MODE=false

# PayTabs
PAYTABS_PROFILE_ID=your_paytabs_profile_id
PAYTABS_SERVER_KEY=your_paytabs_server_key

# File Storage
CLOUD_STORAGE_BUCKET=hyundai-spare-parts-files
CLOUD_STORAGE_PROJECT_ID=your-gcp-project-id

# Security
JWT_SECRET=your-super-secret-jwt-key-for-production
SESSION_SECRET=your-session-secret-key

# Application URLs
FRONTEND_URL=https://your-domain.com
API_BASE_URL=https://your-domain.com/api

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@hyundai-sa.com
SMTP_PASSWORD=your-app-password

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_google_analytics_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
